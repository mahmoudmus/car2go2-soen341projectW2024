<div class="card shadow-sm" style="max-width: 18rem">
    <img
        src="https://images.unsplash.com/photo-1552519507-da3b142c6e3d?q=80&w=1000&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTJ8fGNhcnN8ZW58MHx8MHx8fDA%3D"
        class="card-img-top"
        alt="Car Image"
    />
    <div class="card-body">
        <h5 class="card-title"><%= vehicle.type %></h5>
        <p class="card-text <%= vehicle.available ? 'text-success' : 'text-danger' %>">
            <%= vehicle.available ? 'Available' : 'Unavailable' %>
        </p>
        <div class="">
            <a href="#" class="btn btn-danger"
                ><i class="bi bi-pencil-fill"></i>
            </a>
            <a href="#" class="btn btn-danger"
                ><i class="bi bi-trash3-fill"></i>
            </a>
        </div>
    </div>
</div>
