<!-- Modal -->
<div class="modal fade" id="newVehicleModal" tabindex="-1" aria-labelledby="newVehicleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="newVehicleModalLabel">Add New Vehicle</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>  
                    <div class="form-group">
                        <label for="type">Type</label>
                        <select class="form-control" id="type" required>
                            <option value="">Select Type</option> <!-- Placeholder option -->
                            <option value="car">Car</option>
                            <option value="suv">SUV</option>
                            <option value="van">Van</option>
                            <option value="truck">Truck</option>
                        </select>
                    </div>
                    
                    <div class="form-group">
                        <label for="category">Category</label>
                        <select class="form-control" id="category" required>
                            <option value="">Select Category</option> <!-- Placeholder option -->
                            <option value="compact">Compact</option>
                            <option value="standard">Standard</option>
                            <option value="intermediate">Intermediate</option>
                            <option value="full-size">Full-size</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="price">Price</label>
                        <input type="number" class="form-control" id="price" placeholder="Price" required>
                    </div>
                    <div class="form-group">
                        <label for="branch">Branch</label>
                        <input type="text" class="form-control" id="branch" placeholder="Branch" required>
                    </div>
                    <div class="form-group">
                        <label for="make">Manufacturer</label>
                        <input type="text" class="form-control" id="make" placeholder="Manufacturer">
                    </div>
                    <div class="form-group">
                        <label for="model">Model</label>
                        <input type="text" class="form-control" id="model" placeholder="Model">
                    </div>
                    <div class="form-group">
                        <label for="year">Year</label>
                        <input type="number" class="form-control" id="year" placeholder="Year">
                    </div>
                    <div class="form-group">
                        <label for="colour">Colour</label>
                        <input type="text" class="form-control" id="colour" placeholder="Colour">
                    </div>
    
                    <div class="form-group">
                        <label for="seats">Number of Seats</label>
                        <input type="number" class="form-control" id="seats" placeholder="Seats">
                    </div>
    
                    <div class="form-group">
                        <label for="doors">Number of Doors</label>
                        <input type="number" class="form-control" id="doors" placeholder="Doors">
                    </div>
    
                    <div class="form-group">
                        <label for="mileage">Mileage (km)</label>
                        <input type="number" class="form-control" id="mileage" placeholder="Mileage">
                    </div>
    
                    <div class="form-group">
                        <input type="radio" id="automatic" name="isAutomatic">
                        <label class="form-check-label" for="automatic">Automatic</label>
                        <input type="radio" id="notAutomatic" name="isAutomatic">
                        <label class="form-check-label" for="notAutomatic">Not Automatic</label>
                    </div>

                    <div class="form-group">
                        <label for="engine">Engine Type</label>
                        <select class="form-control" id="engine">
                            <option value="">Select Engine Type</option> <!-- Placeholder option -->
                            <option value="gas">Gas</option>
                            <option value="electric">Electric</option>
                            <option value="hybrid">Hybrid</option>
                        </select>
                    </div>                    

                    <div class="form-group">
                        <label for="size">Size (Litres)</label><br>
                        <input type="number" class="form-control" id="size" placeholder="Size"><br>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Submit</button>
    
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>