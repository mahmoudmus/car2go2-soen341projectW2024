<script type="module" src="/javascripts/reservationFilter.component.js"></script>
<div class="container py-2 my-3 rounded bg-light">
    <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
        <reservation-filter>
            <div class="input-group">
                <input type="text" class="form-control" id="search-email" placeholder="Search by User Email">
                <button type="button" class="btn btn-dark" id="search-button">Search</button>
            </div>
        </reservation-filter>
        <button id="new-reservation-button" type="button" class="btn btn-dark">
            <i class="bi bi-plus-lg pe-2"></i>New Reservation
        </button>
    </div>
</div>
<script>
    document
        .querySelector('#new-reservation-button')
        .addEventListener('click', () => {
            const reservationForm = document.querySelector('reservation-form');
            reservationForm.mode = 'creating';
            reservationForm.modal.show();
        });
</script>